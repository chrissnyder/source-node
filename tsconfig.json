{
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts", "./generator/**/*.ts"],
  "compilerOptions": {
    "outDir": "build",
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "ES2020"
  }
}
